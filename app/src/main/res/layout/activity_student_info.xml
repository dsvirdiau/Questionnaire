<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editStudentCode"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center"
                android:textSize="20sp"
                android:focusedByDefault="true"
                android:ems="10"
                android:background="@drawable/my_button"
                android:textColor="@color/colorEditTextStudentInfo"
                android:textColorHint="@color/colorEditTextStudentInfo"
                android:text=""
                android:hint="Enter Student Code here"
                android:layout_marginTop="20sp"
                app:layout_constraintTop_toBottomOf="@+id/textStudentCode" />

            <Button
                android:id="@+id/btnOK"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="40sp"
                android:background="@color/colorButton"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:text="Submit"
                app:layout_constraintTop_toBottomOf="@+id/editStudentCode" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>